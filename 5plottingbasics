#Plotting Basics

#Plot cos(x) on the same graph with a different color and label.
import matplotlib.pyplot as plt
import numpy as np

x = np.linspace(0, 10, 100)
y_sin = np.sin(x)
y_cos = np.cos(x)

plt.plot(x, y_sin, label="sin(x)", color="blue")
plt.plot(x, y_cos, label="cos(x)", color="red")
plt.title("Line Plot of sin(x) and cos(x)")
plt.xlabel("x")
plt.ylabel("Value")
plt.legend()
plt.show()

#Generate two sets of random points and plot them in different colors on the same scatter plot.
# First set of points
x1 = np.random.rand(50)
y1 = np.random.rand(50)

# Second set of points
x2 = np.random.rand(50)
y2 = np.random.rand(50)

plt.scatter(x1, y1, color="blue", alpha=0.6, label="Set 1")
plt.scatter(x2, y2, color="red", alpha=0.6, label="Set 2")
plt.title("Scatter Plot of Two Sets")
plt.xlabel("x")
plt.ylabel("y")
plt.legend()
plt.show()

#Create your own bar chart with at least 4 categories (e.g., favorite foods, courses, or hobbies).
categories = ["Pizza", "Burger", "Sushi", "Pasta"]
values = [10, 7, 5, 8]

plt.bar(categories, values, color="green")
plt.title("Favorite Foods")
plt.xlabel("Food")
plt.ylabel("Preference Score")
plt.show()

# Customize your own plot with labels, legend, and grid lines.
x = np.linspace(0, 2*np.pi, 100)
y1 = np.sin(x)
y2 = np.cos(x)

plt.plot(x, y1, label="sin(x)", linestyle="--", color="blue")
plt.plot(x, y2, label="cos(x)", linestyle=":", color="red")
plt.title("Customized Trig Functions")
plt.xlabel("Angle (radians)")
plt.ylabel("Function value")
plt.legend()
plt.grid(True)
plt.show()
